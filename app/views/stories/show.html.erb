<h1><%= @story.title %></h1>

<% if @story.components.any? %>
  <% @story.components.each do |component| %>
    <div class="row">
      <div class="col-sm-5">
        <%= image_tag "#{component.image.number}.jpg"%>
      </div>
      <div class="col-sm-5 story-book">
        <h4><%= component.text %></h4>
        <p><%= component.user %></p>
      </div>
    </div>
  <% end %>
<%end %>

<% if @story.components.length < 10 %>
  <%= link_to "Add to this story", story_image_path(@story, @image), class: "btn btn-default" %>
<% else %>
  <h3>The End</h3>
<% end %>
